<div class="container">
  <h1>Add a cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, :input_html => { :class => "cocktail_name" } %>
    <p>How many ingredients?</p>
    <select name="Number of ingredients" id="select-number-of-ingredients">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <p>Choose ingredients</p>
    <%= f.simple_fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', f: ingredient %>
      <%= link_to_add_association 'add ingredient', f, :ingredients %>
      <p><%= f.submit %></p>
    <% end %>
  <% end %>
  <%= link_to "Back to cocktails!", cocktails_path %>

</div>

